<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EDED"
    tools:context=".beratBadanActivity">


    <ImageView
        android:id="@+id/logoBB"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textViewBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Masukkan Berat Badan Anda"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoBB" />

    <FrameLayout
        android:id="@+id/frameLayoutBB"
        android:layout_width="217dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/edittext_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBB"
        tools:ignore="ExtraText">

        <EditText
            android:id="@+id/editTextBB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_data"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:inputType="number"
            android:paddingStart="90dp"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="2dp"
            android:paddingEnd="10dp"
            android:text="Kg"
            android:textSize="15sp" />

    </FrameLayout>

    <Button
        android:id="@+id/buttonBB"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_radius"
        android:text="Selanjutnya"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutBB"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
